<div class="orders-page">
  <h2>Архив завершённых заказов</h2>

  <div class="admin-nav">
    <a href="/orders/active" class="btn-sec">Назад к активным</a>
    <a href="/admin/users"   class="btn-sec">БД пользователей</a>
  </div>

  <div class="table-container">
    <table class="orders-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Покупатель</th>
          <th>Товар</th>
          <th>К-во</th>
          <th>Цена ₽</th>
          <th>Сумма ₽</th>
          <th>Создан</th>
          <th>Ожидается</th>
          <th>Статус</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
          <tr>
            <td>{{id}}</td>
            <td>{{customer_name}}</td>
            <td>
              {{#if product_link}}
                <a href="{{product_link}}" target="_blank" rel="noopener">
                  {{truncate product_name 10}}
                </a>
              {{else}}
                {{truncate product_name 10}}
              {{/if}}
            </td>
            <td>{{quantity}}</td>
            <td>{{unit_price}}</td>
            <td>{{multiply unit_price quantity}}</td>
            <td>{{date created_at}}</td>
            <td>{{date delivery_date}}</td>
            <td>{{status}}</td>
            <td class="action-cell">
              <form action="/orders/update-status/{{id}}" method="post">
                <input type="hidden" name="status" value="На рассмотрении">
                <button type="submit" class="btn-sec">Вернуть из архива</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
