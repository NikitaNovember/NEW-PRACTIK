<div class="orders-page">

    <!-- ===== Заголовок ===== -->
  <h1 class="orders-title">Мои заказы</h1>

    <!-- ===== Бар управления ===== -->
  <div class="orders-controls">



    <!-- фильтр по статусу (чек-лист) -->
    <form class="status-sort" method="get" action="/orders/my">
      <label for="status" class="status-label">Статус</label>

      <select id="status" name="status">
        <option value=""                  {{#unless filter}}selected{{/unless}}>Все заказы</option>
        <option value="На рассмотрении"   {{#eq filter "На рассмотрении"}}selected{{/eq}}>На рассмотрении</option>
        <option value="Закупаем"          {{#eq filter "Закупаем"}}selected{{/eq}}>Закупаем</option>
        <option value="Ждём поставку"     {{#eq filter "Ждём поставку"}}selected{{/eq}}>Ждём поставку</option>
        <option value="Готов к получению" {{#eq filter "Готов к получению"}}selected{{/eq}}>Готов к получению</option>
        <option value="Пауза"             {{#eq filter "Пауза"}}selected{{/eq}}>Пауза</option>
      </select>

      <button type="submit"  class="btn-sec">Фильтр</button>

      {{#if filter}}
        <a href="/orders/my" class="reset-btn">Сбросить</a>
      {{/if}}
    </form>

    <!-- кнопка добавления -->
    <a href="/orders/new" class="btn-add">+ Добавить заказ</a>
  </div>
  <!-- ====== ТАБЛИЦА  ====== -->
  <div class="table-container">
    <table class="orders-table">
      <thead>
        <tr>
          <th>Товар</th>
          <th>Создан</th>
          <th>Ожидается</th>
          <th>Кол-во</th>
          <th>Цена&nbsp;₽</th>
          <th>Статус</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
          <tr>
            <td>
              {{#if product_link}}
                <a href="{{product_link}}" target="_blank" rel="noopener">
                  {{product_name}}
                </a>
              {{else}}
                {{product_name}}
              {{/if}}
            </td>

            <td>{{date created_at}}</td>
            <td>{{date delivery_date}}</td>

            <td>{{quantity}}</td>
            <td>{{unit_price}}</td>
            <td>{{status}}</td>

            <td>
              {{#eq status "На рассмотрении"}}
                <button type="button"
                        class="btn-edit"
                        onclick="fillEdit({{id}}, '{{product_name}}', {{quantity}}, {{unit_price}}, '{{product_link}}', '{{delivery_date}}')">
                  <i class="fa-solid fa-pen"></i>
                </button>
              {{else}}—{{/eq}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  {{!-- Модалка редактирования остаётся без изменений --}}
</div>


  <!-- модальное окно редактирования -->
  <div id="editModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>

      <form id="editForm" action="/orders/edit" method="post">
        <input type="hidden" name="orderId" id="editId">

        <label>Товар
          <input type="text"   name="product_name" id="editProduct" required>
        </label>

        <label>Кол-во
          <input type="number" name="quantity"     id="editQty"     min="1" required>
        </label>

        <label>Цена (₽)
          <input type="number" name="unit_price"   id="editPrice"   step="0.01" min="0" required>
        </label>

        <label>Ссылка
          <input type="url"    name="product_link" id="editLink">
        </label>

        <label>Дата доставки
          <input type="date"   name="delivery_date" id="editDate" required>
        </label>

        <button type="submit" class="btn-submit">Сохранить</button>
      </form>
    </div>
  </div>

</div>
